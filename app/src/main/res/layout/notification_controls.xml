<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_notification"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center|center_vertical">

    <Button
        android:id="@+id/btn_ntfn_start_pause"
        android:layout_width="@dimen/btn_ntfn_width"
        android:layout_height="@dimen/btn_ntfn_height"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        tools:background="@drawable/bg_ntfn_start_pause" />

    <Button
        android:id="@+id/btn_ntfn__lap"
        android:layout_width="@dimen/btn_ntfn_width"
        android:layout_height="@dimen/btn_ntfn_height"
        android:layout_marginStart="@dimen/margin_8"
        android:layout_marginEnd="@dimen/margin_8"
        android:layout_toRightOf="@id/btn_ntfn_start_pause"
        android:layout_toEndOf="@id/btn_ntfn_start_pause"
        tools:background="@drawable/bg_ntfn_btn_lap" />

    <Button
        android:id="@+id/view_cover"
        android:layout_width="105dp"
        android:layout_height="@dimen/btn_ntfn_height"
        android:layout_toRightOf="@id/btn_ntfn_start_pause"
        android:layout_toEndOf="@id/btn_ntfn_start_pause"
        android:clickable="true"
        android:focusable="true"
        android:background="@color/transparent" />

</RelativeLayout>