<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:drawable="@drawable/bg_ntfn_btn_lap_disabled" android:state_enabled="false" />

    <item android:drawable="@drawable/bg_ntfn_btn_lap_enabled" android:state_enabled="true" android:state_pressed="false" />

    <item android:state_enabled="true" android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#D5AD37" />
                    <corners
                        android:bottomLeftRadius="@dimen/radius_4"
                        android:topLeftRadius="@dimen/radius_4" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners
                        android:bottomLeftRadius="@dimen/radius_4"
                        android:bottomRightRadius="@dimen/radius_4"
                        android:topLeftRadius="@dimen/radius_4"
                        android:topRightRadius="@dimen/radius_4" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/btn_border" />
                </shape>
            </item>
            <item
                android:bottom="@dimen/margin_26"
                android:drawable="@drawable/ic_control_save_dark"
                android:left="@dimen/margin_36"
                android:right="@dimen/margin_36"
                android:top="@dimen/margin_26" />
        </layer-list>
    </item>

</selector>