<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_bg_disabled" />
                    <corners android:bottomLeftRadius="@dimen/radius_4"
                        android:topLeftRadius="@dimen/radius_4" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/btn_border_disabled"/>
                    <corners android:bottomLeftRadius="@dimen/radius_4"
                        android:topLeftRadius="@dimen/radius_4" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_control_save_dark"
                android:top="@dimen/margin_24"
                android:bottom="@dimen/margin_24"
                android:left="@dimen/margin_24"
                android:right="@dimen/margin_24" />
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_bg_pressed" />
                    <corners android:bottomLeftRadius="@dimen/radius_4"
                        android:topLeftRadius="@dimen/radius_4" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="@color/btn_border"/>
                    <corners android:bottomLeftRadius="@dimen/radius_4"
                        android:topLeftRadius="@dimen/radius_4" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_control_save"
                android:top="@dimen/margin_24"
                android:bottom="@dimen/margin_24"
                android:left="@dimen/margin_24"
                android:right="@dimen/margin_24" />
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/btn_bg_default" />
                    <corners android:bottomLeftRadius="@dimen/radius_4"
                        android:topLeftRadius="@dimen/radius_4" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="@dimen/radius_4"
                        android:topLeftRadius="@dimen/radius_4" />
                    <stroke
                        android:width="1dp"
                        android:color="@color/btn_border"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_control_save_dark"
                android:top="@dimen/margin_24"
                android:bottom="@dimen/margin_24"
                android:left="@dimen/margin_24"
                android:right="@dimen/margin_24" />
        </layer-list>
    </item>
</selector>