<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_enabled="false">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FA3F3E3D" />
                    <corners android:bottomLeftRadius="8dp"
                        android:topLeftRadius="8dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#FA3F3E3D"/>
                    <corners android:bottomLeftRadius="8dp"
                        android:topLeftRadius="8dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_control_save_dark"
                android:top="24dp"
                android:bottom="24dp"
                android:left="24dp"
                android:right="24dp" />
        </layer-list>
    </item>

    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#17FAD720" />
                    <corners android:bottomLeftRadius="8dp"
                        android:topLeftRadius="8dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke
                        android:width="1dp"
                        android:color="#FAFAD720"/>
                    <corners android:bottomLeftRadius="8dp"
                        android:topLeftRadius="8dp" />
                </shape>
            </item>
            <item android:drawable="@drawable/ic_control_save"
                android:top="24dp"
                android:bottom="24dp"
                android:left="24dp"
                android:right="26dp" />
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#9EFAD720" />
                    <corners android:bottomLeftRadius="4dp"
                        android:topLeftRadius="4dp" />
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <corners android:bottomLeftRadius="4dp"
                        android:topLeftRadius="4dp" />
                    <stroke
                        android:width="1dp"
                        android:color="#FAFAD720"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_control_save_dark"
                android:top="24dp"
                android:bottom="24dp"
                android:left="24dp"
                android:right="24dp" />
        </layer-list>
    </item>
</selector>